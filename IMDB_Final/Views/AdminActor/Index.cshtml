@model IMDB_Final.ViewModels.MovieDierctors


@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminHomeLayout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "CreateActor")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Actor.FirstName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Actor.LastName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Actor.Age)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Actor.Image)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model.Actors)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Age)
            </td>
            <td>


                @if (item.Image != null)
                    {
                        var image = item.Image.Split(new char[] { ',' });

             <div class="figure-img">
             <img src="~/imgs/ProfileActor/@image[0]"alt="error" width="50" height="50">
            </div>

                    @*@Html.DisplayFor(modelItem => item.Image)*@

                }
                else
                {
                    <img src="~/imgs/ProfileMovie/no-user.png" width="50" height="50">
                }
            </td>
            <td>
                @Html.ActionLink("Edit", "EditActor", new { id = item.ActorId }) |
                @Html.ActionLink("Details", "DetailsActor", new { id = item.ActorId }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.ActorId })
            </td>
        </tr>
    }

</table>
